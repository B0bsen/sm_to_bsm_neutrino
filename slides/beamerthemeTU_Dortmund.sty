% section-title
\newcommand{\sectiontitle}[1]{%
	\begin{beamerboxesrounded}[lower=sectiontitle,shadow=true]{}%
		\begin{center}%
			\LARGE{\textbf{#1}}%
		\end{center}%
	\end{beamerboxesrounded}%
}

% colorbar with round corners
\newcommand{\colorbarround}[1]{
	\begin{beamerboxesrounded}[lower=block title,shadow=true]{}%
		#1%
	\end{beamerboxesrounded}%
}

% colorbar with round corners (centered text)
\newcommand{\colorbarroundc}[1]{
	\begin{beamerboxesrounded}[lower=block title,shadow=true]{}%
		\begin{center}%
			#1%
		\end{center}%
	\end{beamerboxesrounded}%
}

% simple textblock
\newcommand{\simpleblock}[2]{%
	{\large #1}\\%
	#2%
}

% literature
\newcommand{\literature}[3]{%
	\footnotesize{#1: {\color{beamer@blendedrgb}#2}} \\%
	\begin{tiny} #3 \end{tiny}%
}

% colorbox (start)
\newcommand{\boxstart}{%
	\begin{beamercolorbox}[shadow=false,rounded=false,sep=5pt]{block body}%
}

% colorbox (end)
\newcommand{\boxend}{%
